
source 'https://rubygems.org'


gem 'rails', '4.2.3'
# Use SCSS for stylesheets:
gem 'sass-rails', '~> 5.0'
# Use Uglifier as compressor for JavaScript assets:
gem 'uglifier', '>= 1.3.0'
# Use CoffeeScript for .coffee assets and views:
gem 'coffee-rails', '~> 4.1.0'
# Use jquery as the JavaScript library:
gem 'jquery-rails'
# Turbolinks makes following links in your web application faster:
gem 'turbolinks'
# Build JSON APIs with ease:
gem 'jbuilder', '~> 2.0'
# bundle exec rake doc:rails generates the API under doc/api:
gem 'sdoc', '~> 0.4.0', group: :doc

# Use ActiveModel has_secure_password
# gem 'bcrypt', '~> 3.1.7'

# Use Unicorn as the app server
# gem 'unicorn'

# Use Capistrano for deployment
# gem 'capistrano-rails', group: :development


group :development, :test do
  # Use sqlite3 as the database for Active Record:
  gem 'sqlite3'
  # Call `byebug` in code to stop execution and get a debugger console:
  gem 'byebug'
  # Access an IRB console on exception pages or with `<%= console %>` in views:
  gem 'web-console', '~> 2.0'
  # Speed up development by keeping your app running in the background:
  gem 'spring'
end


group :test do
  # Death to haphazard monkey-patching! Extend Minitest through simple hooks:
  gem 'minitest-reporters', '~> 1.0'
  # Automatically run your tests with the Minitest framework:
  gem 'guard-minitest', '~> 2.0'
end


group :production do
  gem 'pg'
end


